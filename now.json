{
  "version": 2,
  "scope": "mirshko",
  "name": "dotdesign",
  "public": true,
  "redirects": [
    { "source": "/(.*)", "statusCode": 404, "destination": "/404.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
